<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
	<key>Label</key>
	<string>com.github.scratch</string>
	<key>ProgramArguments</key>
	<array>
		<string>sh</string>
		<string>-c</string>
		<string>diskutil erasevolume HFS+ &quot;<%= node[:scratch][:name] %>&quot; `hdiutil attach -nomount ram://<%= node[:scratch][:size]*1024*2 %>`</string>
	</array>
	<key>RunAtLoad</key>
	<true/>
</dict>
</plist>
